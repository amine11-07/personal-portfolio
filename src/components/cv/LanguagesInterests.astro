---
import Section from "../Section.astro";
---

<Section id="languages-interests" title="Languages & Interests">
  <!-- LANGUAGES -->
  <div class="mb-6" data-aos="fade-up">
    <h3 class="font-semibold text-secondary-foreground mb-2">Languages</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3">
      <div class="flex items-center gap-2 bg-background-secondary p-3 rounded-xl shadow-sm">
        <span class="text-xl">🇫🇷</span>
        <span class="text-muted-foreground text-sm">French – Native</span>
      </div>
      <div class="flex items-center gap-2 bg-background-secondary p-3 rounded-xl shadow-sm">
        <span class="text-xl">🇬🇧</span>
        <span class="text-muted-foreground text-sm">English – Fluent (TOEIC: 985/990 – C1)</span>
      </div>
      <div class="flex items-center gap-2 bg-background-secondary p-3 rounded-xl shadow-sm">
        <span class="text-xl">🇪🇸</span>
        <span class="text-muted-foreground text-sm">Spanish – Intermediate</span>
      </div>
    </div>
  </div>

  <!-- INTERESTS -->
  <div data-aos="fade-up" data-aos-delay="200">
    <h3 class="font-semibold text-secondary-foreground mb-2">Interests</h3>
    <div class="flex flex-wrap gap-3">
      <span class="flex items-center gap-2 bg-accent-200 text-secondary-foreground text-sm px-3 py-1 rounded-full shadow-sm transition-transform hover:scale-105 hover:bg-accent-300">⚽ Football</span>
      <span class="flex items-center gap-2 bg-accent-200 text-secondary-foreground text-sm px-3 py-1 rounded-full shadow-sm transition-transform hover:scale-105 hover:bg-accent-300">🧠 Chess</span>
      <span class="flex items-center gap-2 bg-accent-200 text-secondary-foreground text-sm px-3 py-1 rounded-full shadow-sm transition-transform hover:scale-105 hover:bg-accent-300">📸 Photography</span>
      <span class="flex items-center gap-2 bg-accent-200 text-secondary-foreground text-sm px-3 py-1 rounded-full shadow-sm transition-transform hover:scale-105 hover:bg-accent-300">🌍 Travel</span>
      <span class="flex items-center gap-2 bg-accent-200 text-secondary-foreground text-sm px-3 py-1 rounded-full shadow-sm transition-transform hover:scale-105 hover:bg-accent-300">❄️ Northern Lights</span>
    </div>
  </div>
</Section>



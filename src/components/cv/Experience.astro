---
import Card from '../Card.astro';
import Section from '../Section.astro';
import data from '../../data.yaml';
import { Content } from '@/types';
---

<Section id="experience" title="Experience">
	{data.experience.map((role: Content) => (
		<Card
			class="flex w-full flex-col gap-x-7 gap-y-1 bg-background-secondary p-5 text-secondary-foreground"
			heading=""
			subheading={role.title}
			date={role.dateRange}
		>
			<div class="flex justify-between items-center mb-2">
				<h3 class="text-lg font-semibold">{role.company}</h3>
				{role.logo && (
					<img src={role.logo} alt={`${role.company} logo`} class="h-8 w-auto ml-4" />
				)}
			</div>

			<ul class="ml-4 list-disc text-muted-foreground">
				{role.description.map((bullet) => (
					<li>{bullet}</li>
				))}
			</ul>
		</Card>
	))}
</Section>
